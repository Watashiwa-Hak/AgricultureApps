<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:id="@+id/lblLogin"
        android:text="Create your account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblUsername"
        android:text="Name "
        android:layout_below="@id/lblLogin"
        android:textSize="17sp"
        android:textColor="@color/material_dynamic_neutral50"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/lblUsername"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_color"
        android:hint="ex. jonh Smith"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblEmail"
        android:text="Email "
        android:layout_below="@id/etUsername"
        android:textSize="17sp"
        android:textColor="@color/material_dynamic_neutral50"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/lblEmail"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_color"
        android:hint="ex. jonhSmith@email.com"
        android:paddingStart="10dp"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:text="Password "
        android:layout_below="@id/etEmail"
        android:textSize="17sp"
        android:textColor="@color/material_dynamic_neutral50"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/lblPassword"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_color"
        android:hint="Enter Password..."
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblcfPassword"
        android:text="Confirm Password "
        android:layout_below="@id/etPassword"
        android:textSize="17sp"
        android:textColor="@color/material_dynamic_neutral50"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:id="@+id/etcfPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/lblcfPassword"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_color"
        android:hint="Enter password again..."
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbpolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcfPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I understood the "
        android:layout_toEndOf="@id/cbpolicy"
        android:layout_below="@id/etcfPassword"
        android:layout_marginTop="13dp"
        android:id="@+id/lblpolicy"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terms and policies "
        android:layout_toEndOf="@id/lblpolicy"
        android:layout_below="@id/etcfPassword"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblpolicy"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg_color"
        android:text="SIGN UP"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:text=" or Sign up with"
        android:layout_marginTop="15dp"
        android:id="@+id/lblmoreop"
        android:textSize="15sp"
        android:textColor="@color/material_dynamic_neutral50"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"

        android:layout_below="@id/lblmoreop"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/img"
        android:id="@+id/btn1"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:layout_below="@id/lblmoreop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/btn1"
        android:id="@+id/btn2"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/img_2"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:layout_below="@id/lblmoreop"
        android:layout_marginTop="20dp"

        android:layout_toEndOf="@id/btn2"
        android:id="@+id/btn3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/img_1"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/accyet"
        android:layout_below="@id/btn1"
        android:text="Have an Account?"
        android:textStyle="bold"
        android:layout_marginTop="20dp"

        android:textSize="14sp"
        android:layout_marginStart="125dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign"
        android:layout_below="@id/btn1"
        android:text="Sign in"
        android:textStyle="bold"
        android:layout_marginTop="20dp"

        android:textSize="14sp"
        android:layout_toEndOf="@id/accyet"
        android:textColor="@android:color/holo_green_light"
        />

</RelativeLayout>